.navbar-default
	background-color azul1
	border-color azul2
	margin-bottom 0
	text-transform uppercase
	.navbar-brand
		padding 7px 15px
	.navbar-toggle
		border none
		.icon-bar
			background-color blanco
			height 4px
			width 25px
