	.navbar-nav .open .dropdown-menu>li>a
	.navbar-nav>li>a:hover
		color blanco
	.navbar-nav>.active>a
	.navbar-nav>.open>a
		background-color azul2
	.navbar-nav>.open>a:hover
		background-color azul2
	.navbar-nav>.active>a
		background transparent
		color azul2
		transition color .5s ease
		&:hover
			background transparent
			border-color gris2
			color azul2
			transition border-color 1s ease
	.navbar-nav>li>a:hover
		color azul2
		transition color .5s ease
/*MAIN BANNER*/
.main-banner-container
	position relative
	.container
		padding-left 0
		padding-right 0
.main-banner
	display block
	height 480px
	overflow hidden
	.item
		background transparent url(../../images/banner_principal_01_chiquito.jpg) no-repeat center top
		display inline-block
		min-height 480px
		&.tres
			background transparent url(../../images/banner_principal_03_chiquito.jpg) no-repeat center top
		&.dos
			background transparent url(../../images/banner_principal_02_chiquito.jpg) no-repeat center top
	.slick-prev
	.slick-next
		position absolute
		top 45%
		z-index 999
		color blanco
		font-size 3em
		border none
		background transparent
		&:focus
			outline none
	.slick-next
		right 0
		transform rotate(180deg)
		top 42.5%
	.slick-prev
		left 0
.top-content
	bottom -40px
	position absolute
	text-align center
	width 100%
	.logo
		margin-bottom 30px
	.slogan
		color white
		font-size 1.2em
		font-weight 300
		margin 0 auto 30px auto
		width 260px
	.call-to-action
		text-align center
		margin-bottom 30px
		a
			border 1px solid white
			color blanco
			font-size 1.2em
			padding 5px 10px
	.arrow-container
		display flex
		justify-content center
		margin-bottom 30px
		.arrow
			align-self center
			background-color verde1
			border-radius 50%
			color blanco
			display inline-block
			font-size 1.4em
			height 35px
			text-align center
			vertical-align middle
			width 35px
			&.icon-flecha
				display flex
				justify-content center
				&:before
					align-self center
					margin-top 6px
					margin-left 1px
					transform rotate(-90deg)
	.banner-line
		background-color amarillo1
		display inline-block
		height 80px
		width 4px
